<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_watchlist">

    <fragment
        android:id="@+id/navigation_watchlist"
        android:name="com.example.fingraph.home.ui.watchlist.WatchlistFragment"
        android:label="Home"
        tools:layout="@layout/fragment_watchlist" />

    <fragment
        android:id="@+id/navigation_education"
        android:name="com.example.fingraph.home.ui.education.EducationFragment"
        android:label="Education"
        tools:layout="@layout/fragment_education" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fingraph.home.ui.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.fingraph.home.ui.profile.ProfileFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_profile" />
</navigation>
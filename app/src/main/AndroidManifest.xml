<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fingraph" android:targetSandboxVersion="2">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fingraph">
        <activity
            android:name=".home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".recovery.CreateNewPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.OnboardingStepThreeActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.OnboardingStepTwoActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.OnboardingStepOneActivity"
            android:exported="true" />
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Fingraph.NoActionBar">

        </activity>
    </application>

</manifest>